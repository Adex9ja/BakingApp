<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/primary_mid_200"
                android:endColor="@color/primary_light_100"
                android:type="linear" />
            <corners
                android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/primary_dark"
                android:endColor="@color/primary_light_100"
                android:type="linear" />
            <corners
                android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary" />
        </shape>
    </item>
</selector>