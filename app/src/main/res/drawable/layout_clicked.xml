<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item  android:state_pressed="true">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="@color/primary_mid_200"
            android:endColor="@color/primary_light_100"
            android:type="linear" />
        <stroke
            android:width="1dp"
            android:color="@color/primary"/>
    </shape>
</item>
<item  android:state_activated="true">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="@color/primary_mid_200"
            android:endColor="@color/primary_light_100"
            android:type="linear" />
        <stroke
            android:width="1dp"
            android:color="@color/primary"/>
    </shape>
</item>
<item  android:state_selected = "true">
    <shape>
        <gradient
            android:angle="90"
            android:startColor="@color/primary_mid_200"
            android:endColor="@color/primary_light_100"
            android:type="linear" />
        <stroke
            android:width="1dp"
            android:color="@color/primary"/>
    </shape>
</item>

<item android:drawable="@android:color/background_light" />
</selector>