<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchwrap">
    <android.support.v7.widget.CardView  style="@style/matchwrap">
        <LinearLayout  style="@style/Widget.CardContent"
            android:background="@drawable/layout_clicked"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/step_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/step_pix"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"/>
            <TextView
                android:paddingLeft="@dimen/medium_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/description"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>