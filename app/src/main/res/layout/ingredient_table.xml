<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/matchwrap"
    android:padding="@dimen/small_5"    >
    <android.support.v7.widget.CardView style="@style/matchwrap">
        <LinearLayout  style="@style/Widget.CardContent" >

            <LinearLayout
                style="@style/matchwrap"
                android:orientation="horizontal"
                android:padding="@dimen/medium_10"
                android:background="@drawable/button_gradient">
                <TextView
                    style="@style/matchwrap"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="@string/stringrediet"
                    android:textColor="@color/accent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>
                <TextView
                    style="@style/matchwrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/quantity"
                    android:textColor="@color/accent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>
                <TextView
                    style="@style/matchwrap"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/measure"
                    android:textColor="@color/accent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                style="@style/matchwrap"
                android:id="@+id/list_ingredient"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>